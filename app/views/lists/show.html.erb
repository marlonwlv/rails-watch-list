
<%= render 'banner' %>

<%= link_to 'Add movie', new_list_bookmark_path(@list), class:"btn btn-flat" %>


<div class="container">
  <div class="cards">
    <% @bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-trip-infos">
          <div>
            <h2><%= Movie.find(bookmark.movie_id).title %></h2>
            <p><%= Movie.find(bookmark.movie_id).rating %> </p>
          </div>
          <p class="card-trip-pricing"><%= Movie.find(bookmark.movie_id).overview %></p>
          <div>
            <p><%= bookmark.comment %></p>
            <%= link_to 'delete', bookmark_path(bookmark), method: :delete %>
            <%# <%= link_to 'delete', list_bookmark_path(@bookmark)  %>
          </div>
        </div>
      </div>
    <% end  %>
  </div>
</div>
